#include <chrono>
#include <ctime>
#include "StopWatch.h"

StopWatch::Stopwatch(){
	previous = std::chrono::steady_clock::now();
};

static StopWatch& StopWatch::getInstance(){
	static StopWatch instance;
	return instance;
}

void StopWatch::reset(){
	previous = std::chrono::steady_clock::now();
}

double StopWatch::getElapsedTime(){
	typedef std::chrono::milliseconds ms;
	std::chrono::duration<double> elapsed_time = std::chrono::steady_clock::now() - previous;
    	ms milliseconds = std::chrono::duration_cast<ms>(elapsed_time);
     	return milliseconds.count();
}
